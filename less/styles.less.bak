.container {
	max-width: @totalWidth;
	margin-right: auto;
  	margin-left: auto;
  	padding: 0 40px;
  	.clearfix();
}

.row {
	max-width: @totalWidth;
	margin: 0 auto;
	.clearfix();
}

.row .row {
    margin: 0;
    width: auto;
    display: inline-block;
}

.column {
	margin: 0;
	overflow: hidden;
	float: left;
	/*display: inline;*/
	min-height: 1px;
}



img {
	-ms-interpolation-mode: bicubic;
	interpolation-mode: bicubic;
	max-width: 100%;
	width: 100%;
	display: block;
}