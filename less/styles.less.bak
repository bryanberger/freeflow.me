@numCols: 5;
@colWidth: 280px;
@padding: 0;
@totalWidth: (@colWidth*@numCols) + @padding;
@gutter: 0;

h1 {
	height: 90px;
	background: url('../imgs/logo.png') no-repeat;
	text-indent: -9999px;
}

header {
	margin: 52px 0;
}

.clearfix() {
  &:before,
  &:after {
    content: " "; /* 1 */
    display: table; /* 2 */
  }
  &:after {
    clear: both;
  }
}

/* http://twitter.github.com/bootstrap/scaffolding.html#responsive */ 
/* Landscape phones and down */
@media (max-width: 480px) {
	.grid1 {
		width: @colWidth;
	}

	.grid2 {
		width: @colWidth;
	}
}
 
/* Landscape phone to portrait tablet */
@media (max-width: 768px) {

}
 
/* Portrait tablet to landscape and desktop */
@media (min-width: 768px) and (max-width: 940px) {

}
 

@media (min-width: 1120px) and (max-width: 1400px) {
	.grid1 {
		width: 100% * (@colWidth/1120);
	}
	.grid2 {
		width: 100% * (@colWidth * 2/1120);
	}
}

/* Default: 940px and up  */
 
/* Large desktop */
@media (min-width: 1400px) {
	.grid1 {
		width: 100% * (@colWidth/@totalWidth);
	}

	.grid2 {
		width: 100% * (@colWidth * 2/@totalWidth);
	}
}

